<%- include ('../partials/header') %>

<div class="container my-5">
  <header>
    <h1>
      Reservation for <%= // replace this comment with restaurant name %>
    </h1>
  </header>
  <hr>
  <div>
    <p>
      <strong>For:</strong>&nbsp;<%= // replace this comment with the user's full name %>
      <br>
      <strong>At:</strong>&nbsp;<%= // replace this comment with the date of the reservation %>
    </p>
  </div>
  <hr>
  <div>
    <a href="/reservations/<%= // replace this comment with the reservation id %>/edit"><i class="fa fa-edit">&nbsp;</i>Change your reservation</a>
    <br>
    <form class="form-inline" action="/reservations/delete" method="post" onsubmit="return confirm('Are you sure you want to cancel your reservation?');">
      <input type="hidden" value="<%= // replace this comment with the reservation id %>" name="id">
      <button class="delete" type="submit">
        <i class="fa fa-trash">&nbsp;</i>
        Cancel your reservation
      </button>
    </form>
  </div>
</div>

<%- include ('../partials/footer') %>